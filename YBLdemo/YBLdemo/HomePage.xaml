<Page
    x:Class="YBLdemo.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YBLdemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="Orange"  Height="150"/>
        <TextBlock Text="刘大夫中医" Margin="20,50,0,0" FontSize="36" Foreground="White" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,0" Background="#FFFFE0A6" >

            <!--TextBlock Text="姓名:" VerticalAlignment="Center" Margin="20,0,0,0"/-->
            <TextBox  Header="姓名" Text=""  
                      BorderThickness="2,2,2,2"  
                      Margin="20,0,0,0" 
                      VerticalAlignment="Top" 
                      Height="60"  BorderBrush="Transparent" PlaceholderText="_________" Background="{x:Null}"/>
            <!--TextBlock Text="性别:" VerticalAlignment="Center" Margin="20,0,0,0"/-->
            <ComboBox Header="性别" 
                      BorderThickness="2,2,2,2" 
                      Margin="20,0,0,0" 
                      VerticalAlignment="Top"
                      
                      BorderBrush="Transparent" Background="{x:Null}">
                <ComboBoxItem Content="男"/>
                <ComboBoxItem Content="女"/>
            </ComboBox>
            <!--TextBlock Text="出生年月:" VerticalAlignment="Center" Margin="20,0,0,0"/-->
            <DatePicker Header="出生年月" 
                        BorderThickness="0" 
                        Margin="20,0,0,0"
                        DayVisible="False"  
                        VerticalAlignment="Top"   >
                <DatePicker.Background>
                    <ImageBrush Stretch="Fill"/>
                </DatePicker.Background>
            </DatePicker>


        </StackPanel>
        <Rectangle Grid.Row="2" Fill="Orange" Margin="0,0,0,0" Height="10"/>
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,0" Background="#FFFFE0A6" >
            <TextBlock Text="脉诊" Margin="20,0,0,0" FontSize="18"/>
